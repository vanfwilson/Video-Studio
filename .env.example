# Video Studio Environment Variables
# Copy to .env and update values

# ===========================================
# DATABASE
# ===========================================
POSTGRES_PASSWORD=change_this_secure_password

# ===========================================
# PUBLIC URL (for n8n to reach videos)
# ===========================================
PUBLIC_BASE_URL=https://video-studio.askstephen.ai

# ===========================================
# n8n WEBHOOK URLS
# ===========================================
N8N_TRANSCRIBE_URL=https://automation.aiautomationauthority.com/webhook/transcribe
N8N_PUBLISH_URL=https://automation.aiautomationauthority.com/webhook/publish
DEFAULT_LANGUAGE_CODE=en

# ===========================================
# OPENROUTER AI (for metadata & confidentiality)
# Get API key from: https://openrouter.ai/keys
# ===========================================
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_SITE_URL=https://video-studio.askstephen.ai
OPENROUTER_APP_NAME=Video Studio

# ===========================================
# YOUTUBE OAUTH
# Get credentials from: https://console.cloud.google.com
# ===========================================
YOUTUBE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REDIRECT_URI=https://video-studio.askstephen.ai/oauth/youtube/callback

# ===========================================
# STORAGE
# ===========================================
UPLOAD_DIR=/data/uploads
MAX_UPLOAD_MB=2000

# ===========================================
# CORS (comma-separated or *)
# ===========================================
CORS_ORIGINS=*

# ===========================================
# SECURITY
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ===========================================
APP_ENCRYPTION_KEY=
